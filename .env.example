# Reddit Automation Configuration

# Options Edu LLM API
ANTHROPIC_API_KEY=sk-ant-api03-your-api-key-here
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.3

# Reddit Configuration
REDDIT_BASE_URL=https://www.reddit.com
REDDIT_SEARCH_DELAY=2
REDDIT_SCROLL_DELAY=1.5

# Redis State Management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password

# Screenshot Settings
SCREENSHOT_DIR=screenshots
SCREENSHOT_QUALITY=95
SCREENSHOT_AUTO_DELETE_DAYS=7

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=30

# Scheduling
DAILY_RUN_TIME=09:00
TIMEZONE=America/New_York

# Performance Tuning
OSK_TYPING_DELAY=0.1
OSK_CLICK_DURATION=0.05
SCROLL_STEP_SIZE=800
SCROLL_WAIT_TIME=1.5
MAX_SCROLL_DEPTH=10

# Error Recovery
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5
OSK_RESTART_TIMEOUT=30

# Browser Settings
BROWSER_HEADLESS=false
BROWSER_WINDOW_WIDTH=1920
BROWSER_WINDOW_HEIGHT=1080
BROWSER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
